{
  "expo": {
    "name": "TapKiosk",
    "slug": "TapKiosk",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "tapkiosk",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser",
      [
        "@stripe/stripe-terminal-react-native",
        {
          "enableLogging": true
        }
      ]
    ],
    "ios": {
      "bundleIdentifier": "com.yourco.kiosk",
      "associatedDomains": ["applinks:yourdomain.com"],
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "We use Bluetooth to connect to card readers.",
        "NSLocationWhenInUseUsageDescription": "Location is required to accept in-person payments."
      }
    },
    "android": {
      "package": "com.yourco.kiosk",
      "intentFilters": [
        {
          "action": "VIEW",
          "category": ["BROWSABLE", "DEFAULT"],
          "data": [{ "scheme": "stripekiosk" }]
        }
      ]
    },
    "experiments": {
      "typedRoutes": true
    }
  }
}
